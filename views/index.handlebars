<h1>Eat Da Burgers!</h1>


<h2>Burgers ready to eat!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Hungry?</label><br>
        <input type="radio" name="devoured" value="1" checked> I ate that already!<br>
        <input type="radio" name="devoured" value="0"> I want that one!
    </div>


    <button type="submit">Add Burger</button>
</form>